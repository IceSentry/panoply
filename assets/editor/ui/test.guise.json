{
  "$schema": "../../../schemas/guise.schema.json",
  "fonts": {
    "Rubik": [
      {
        "src": "asset(../fonts/Rubik/Rubik-VariableFont_wght.ttf)"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-VariableFont_wght.ttf)",
        "font-weight": "bold"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-Italic-VariableFont_wght.ttf)",
        "font-style": "italic"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-Italic-VariableFont_wght.ttf)",
        "font-weight": "bold",
        "font-style": "italic"
      }
    ]
  },
  "styles": {
    "obs-button": {
      "base": {
        "padding": 6,
        "background-color": "#222",
        "border-color": "#404",
        "vars": {
          "--button-image": "asset(../images/button-blue.png)"
        },
        "selectors": {
          "&.hover": {
            "vars": {
              "--button-image": "asset(../images/button-blue-hover.png)"
            }
          },
          "&.pressed": {
            "vars": {
              "--button-image": "asset(../images/button-blue-pressed.png)"
            }
          },
          "&.disabled": {
            "vars": {
              "--button-image": "asset(../images/button-blue-disabled.png)"
            }
          }
        }
      },
      "background": {
        "display": "grid"
      },
      "background-patch": {
        "background-image": "var(--button-image)",
        "selectors": {
          ".disabled > * > &": {}
        }
      }
    },
    "obs-button-green": {
      "extends": "#styles/obs-button",
      "base": {
        "vars": {
          "--button-image": "asset(../images/button-green.png)"
        }
      }
    },
    "sub-panel": {
      "base": {
        "padding": 6,
        "background-color": "#222",
        "border-color": "#404"
      }
    }
  },
  "templates": {
    "main": {
      "params": {},
      "content": {
        "style": {},
        "children": [
          {
            "id": "left",
            "styleset": "#/styles/sub-panel",
            "style": {
              "width": 200
            }
          },
          {
            "id": "center",
            "controller": "ViewportInsetController",
            "style": {
              "flex": 1
            }
          },
          {
            "id": "right",
            "styleset": "#/styles/sub-panel",
            "style": {
              "width": 200
            }
          }
        ]
      }
    },
    "demo-button": {
      "content": {}
    },
    "demo-counter": {
      "content": {
        "controller": "CounterController",
        "children": []
      }
    }
  }
}
