{
  "$schema": "../../../schemas/guise.schema.json",
  "fonts": {
    "Rubik": [
      {
        "src": "asset(../fonts/Rubik/Rubik-VariableFont_wght.ttf)"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-VariableFont_wght.ttf)",
        "font-weight": "bold"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-Italic-VariableFont_wght.ttf)",
        "font-style": "italic"
      },
      {
        "src": "asset(../fonts/Rubik/Rubik-Italic-VariableFont_wght.ttf)",
        "font-weight": "bold",
        "font-style": "italic"
      }
    ]
  },
  "styles": {
    "obs-button": {
      "padding": 6,
      "background-color": "#222",
      "border-color": "#404",
      "vars": {
        "--button-image": "asset(../images/button-blue.png)"
      },
      "selectors": {
        "&.hover": {
          "vars": {
            "--button-image": "asset(../images/button-blue-hover.png)"
          }
        },
        "&.pressed": {
          "vars": {
            "--button-image": "asset(../images/button-blue-pressed.png)"
          }
        },
        "&.disabled": {
          "vars": {
            "--button-image": "asset(../images/button-blue-disabled.png)"
          }
        }
      }
    },
    "obs-button-background": {
      "display": "grid"
    },
    "obs-button-background-patch": {
      "background-image": "var(--button-image)",
      "selectors": {
        ".disabled > * > &": {}
      }
    },
    "obs-button-green": {
      "vars": {
        "--button-image": "asset(../images/button-green.png)"
      }
    },
    "main-panel": {
      "border-color": "#4f0",
      "border": 2,
      "flex-grow": 1
    },
    "sub-panel": {
      "padding": 6,
      "background-color": "#222",
      "border-color": "#f04",
      "border": 2
    }
  },
  "templates": {
    "main": {
      "params": {},
      "content": {
        "type": "element",
        "styleset": ["#styles/main-panel"],
        "style": {
          "display": "flex",
          "flex-direction": "row",
          "position": "absolute",
          "left": 0,
          "top": 0,
          "right": 0,
          "bottom": 10
        },
        "children": [
          {
            "type": "element",
            "id": "left",
            "styleset": ["#styles/sub-panel"],
            "style": {
              "width": 200
            },
            "children": [
              {
                "type": "text",
                "content": "Hello, world!"
              }
            ]
          },
          {
            "type": "element",
            "id": "center",
            "controller": "ViewportInsetController",
            "style": {
              "flex": 1,
              "width": 30
            }
          },
          {
            "type": "element",
            "id": "right",
            "styleset": ["#styles/sub-panel"],
            "style": {
              "width": 200
            }
          }
        ]
      }
    },
    "demo-button": {
      "content": {
        "type": "element"
      }
    },
    "demo-counter": {
      "content": {
        "type": "element",
        "controller": "CounterController",
        "children": []
      }
    }
  }
}
