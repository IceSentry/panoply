<?xml version="1.1" encoding="UTF-8"?>
<?xml-model href="../../../schemas/guise.rng"?>
<templates xmlns:ctrl="http://viridia.org/guise/ctrl">
  <style id="panel" display="flex" flex-direction="row" left="10px" right="10" top="10px"
    bottom="10px" position="absolute" border="2"
    border-color="#ff0" />
  <style id="sub-panel"
    padding="6"
    background-color="#222"
    border-color="#044" />
  <style id="center"
    border="1"
    background-color="transparent"
    border-color="#000" />
  <style id="vsplitter"
    display="flex"
    width="7"
    align-items="center"
    justify-items="center"
    justify-content="center"
    background-color="#222" />
  <style id="vsplitter-thumb"
    width="3"
    height="20%"
    justify-self="center"
    background-color="#444444" />
  <style id="button-style"
    flex-direction="row"
    background-color="#444"
    border="1"
    color="#ff0"
    border-color="#111"
    align-items="center"
    align-content="center"
    line-break="nowrap"
    padding="0 8px"
  >
    <style selector="self.hover"
      background-color="#4c4c4c"
      color="#ff8"
    />
    <style selector="self.pressed"
      background-color="#555"
      border-color="#000"
      color="#ffa"
    />
    <style selector="self.disabled"
      background-color="#000"
      border-color="#111"
    />
  </style>
  <style id="slider-style"
    background-color="#733"
  >
    <style selector="self.track"
      background-color="#f44"
      border-color="#f22"
      position="absolute"
      left="0"
      right="0"
      top="4px"
      bottom="4px"
    />
    <style selector="self.thumb"
      background-color="#44f"
      border-color="#f2f"
      position="absolute"
    />
  </style>
  <template id="button">
    <param name="children" type="nodes" />
    <content>
      <node
        controller="ButtonController"
        ctrl:variant="primary"
        width="100"
        height="20"
        border="1"
        border-color="#f00"
        align-items="center"
      >
        {{children}}
      </node>
    </content>
  </template>
  <template id="main">
    <param name="count" type="i32" />
    <param name="mode" type="panoply::editor::ui::EditorMode" />
    <content>
      <node id="main" style="#panel">
        <!-- Left -->
        <node id="left" width="200" style="#sub-panel" flex-direction="column" gap="4">
          <node
            id="test-button"
            controller="ButtonController"
            style="#button-style"
            width="100"
            height="20"
          >Button {{count}}</node>
          <node
            id="test-button"
            controller="ButtonController"
            ctrl:disabled="true"
            style="#button-style"
            width="100"
            height="20"
          >Disabled Button</node>
          <node
            id="test-slider"
            controller="SliderController"
            style="#slider-style"
            ctrl:value="50"
            ctrl:min="0"
            ctrl:max="200"
            width="140"
            height="16"
          >
            <node id="track" />
            <node id="thumb" />
          </node>
          <node
            id="test-slider-2"
            controller="SliderController"
            style="#slider-style"
            ctrl:value="0"
            ctrl:min="0"
            ctrl:max="20"
            width="140"
            height="16"
          >
            <node id="track" />
            <node id="thumb" />
          </node>
        </node>

        <!-- Left Splitter -->
        <node id="split1" style="#vsplitter">
          <node style="#vsplitter-thumb" />
        </node>

        <!-- Center -->
        <node
          id="center"
          flex="1"
          style="#center"
          background-color="transparent"
          controller="ViewportInsetController"
        />

        <!-- Right Splitter -->
        <node id="split2" style="#vsplitter">
          <node style="#vsplitter-thumb" />
        </node>

        <!-- Right -->
        <node id="right" width="200" style="#sub-panel">
        </node>
      </node>
    </content>
  </template>
</templates>