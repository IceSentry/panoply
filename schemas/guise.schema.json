{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://viridia.org/panoply/guise.schema.json",
  "title": "Guise Templates",
  "description": "Schema for Guise templates",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "templates": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/template"
        }
      },
      "additionalProperties": false
    },
    "styles": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/style"
        }
      },
      "additionalProperties": false
    },
    "fonts": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/font"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "style-set": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/style"
        }
      },
      "properties": {
        "extends": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "style": {
      "type": "object",
      "properties": {
        "background-color": {
          "$ref": "#/definitions/color"
        },
        "border-color": {
          "$ref": "#/definitions/color"
        },
        "color": {
          "$ref": "#/definitions/color"
        },
        "display": {
          "enum": ["flex", "grid"]
        },
        "position": {
          "enum": ["absolute", "relative"]
        },
        "left": {
          "$ref": "#/definitions/val"
        },
        "right": {
          "$ref": "#/definitions/val"
        },
        "top": {
          "$ref": "#/definitions/val"
        },
        "bottom": {
          "$ref": "#/definitions/val"
        },
        "width": {
          "$ref": "#/definitions/val"
        },
        "height": {
          "$ref": "#/definitions/val"
        },
        "min-width": {
          "$ref": "#/definitions/val"
        },
        "min-height": {
          "$ref": "#/definitions/val"
        },
        "max-width": {
          "$ref": "#/definitions/val"
        },
        "max-height": {
          "$ref": "#/definitions/val"
        },
        "padding": {
          "$ref": "#/definitions/val"
        },
        "border": {
          "$ref": "#/definitions/val"
        },
        "flex": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            }
          ]
        },
        "flex-grow": {
          "type": "number",
          "minimum": 0
        },
        "flex-shrink": {
          "type": "number",
          "minimum": 0
        },
        "flex-basis": {
          "$ref": "#/definitions/val"
        },
        "flex-direction": {
          "enum": ["row", "row-reverse", "column", "column-reverse"]
        },
        "background-image": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "asset\\(.*?\\)"
            },
            {
              "$ref": "#/definitions/var-ref"
            }
          ]
        },
        "vars": {
          "type": "object",
          "patternProperties": {
            "^--[A-Za-z_][A-Za-z0-9_\\.-]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "selectors": {
          "type": "object",
          "patternProperties": {
            "^((\\*|\\.[A-Za-z_][A-Za-z0-9_\\.-]*)\\s*>\\s*)*&(\\.[A-Za-z_][A-Za-z0-9_\\.-]*)*$": {
              "$ref": "#/definitions/style"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "color": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{3}$"
        },
        {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        }
      ]
    },
    "val": {
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^\\d+(\\.\\d*)(px|%|vw|vh|vmin|vmax)$"
        },
        {
          "type": "string",
          "const": "auto"
        }
      ]
    },
    "var-ref": {
      "type": "string",
      "pattern": "^var\\(--[A-Za-z_][A-Za-z0-9_\\.-]*\\)$"
    },
    "template": {
      "type": "object",
      "properties": {
        "params": {},
        "content": {
          "$ref": "#/definitions/template-node"
        }
      },
      "required": ["content"],
      "additionalProperties": false
    },
    "template-node": {
      "oneOf": [
        {
          "$ref": "#/definitions/element-node"
        },
        {
          "$ref": "#/definitions/text-node"
        },
        {
          "$ref": "#/definitions/fragment-node"
        }
      ]
    },
    "element-node": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["element"]
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "styleset": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "style": {
          "$ref": "#/definitions/style"
        },
        "controller": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/template-node"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "text-node": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["text"]
        },
        "styleset": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "style": {
          "$ref": "#/definitions/style"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["type", "content"],
      "additionalProperties": false
    },
    "fragment-node": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["fragment"]
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/template-node"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "font": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "src": {
            "type": "string"
          },
          "font-weight": {
            "enum": ["nornal", "bold"]
          },
          "font-style": {
            "enum": ["nornmal", "italic"]
          }
        },
        "required": ["src"],
        "additionalProperties": false
      }
    }
  }
}
