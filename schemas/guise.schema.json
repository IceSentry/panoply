{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://viridia.org/panoply/guise.schema.json",
  "title": "Guise Templates",
  "description": "Schema for Guise templates",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "templates": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/template"
        }
      },
      "additionalProperties": false
    },
    "styles": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/style-set"
        }
      },
      "additionalProperties": false
    },
    "fonts": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/font"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "style-set": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_\\.-]*$": {
          "$ref": "#/definitions/style"
        }
      },
      "properties": {
        "extends": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "style": {
      "type": "object",
      "properties": {
        "color": {
          "$ref": "#/definitions/color"
        },
        "background-color": {
          "$ref": "#/definitions/color"
        },
        "border-color": {
          "$ref": "#/definitions/color"
        },
        "display": {
          "enum": ["flex", "grid"]
        },
        "padding": {
          "$ref": "#/definitions/val"
        },
        "background-image": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/var-ref"
            }
          ]
        },
        "vars": {
          "type": "object",
          "patternProperties": {
            "^--[A-Za-z_][A-Za-z0-9_\\.-]*$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "selectors": {
          "type": "object",
          "patternProperties": {
            "^((\\*|\\.[A-Za-z_][A-Za-z0-9_\\.-]*)\\s*>\\s*)*&(\\.[A-Za-z_][A-Za-z0-9_\\.-]*)*$": {
              "$ref": "#/definitions/style"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "color": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{3}$"
        },
        {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$"
        }
      ]
    },
    "val": {
      "oneOf": [
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^\\d+px$"
        }
      ]
    },
    "var-ref": {
      "type": "object",
      "properties": {
        "var": {
          "pattern": "^--[A-Za-z_][A-Za-z0-9_\\.-]*$"
        }
      }
    },
    "template": {
      "type": "object",
      "properties": {
        "params": {},
        "content": {}
      },
      "required": ["content"],
      "additionalProperties": false
    },
    "font": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "src": {
            "type": "string"
          },
          "font-weight": {
            "enum": ["nornal", "bold"]
          },
          "font-style": {
            "enum": ["nornmal", "italic"]
          }
        },
        "required": ["src"],
        "additionalProperties": false
      }
    }
  }
}
